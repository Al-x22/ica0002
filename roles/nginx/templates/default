server {
	listen 80 default_server;
	server_name _;

	{% if inventory_hostname in groups['agama_servers'] %}
	location / {
	        proxy_set_header Host $http_host;
		proxy_pass http://localhost:{{ agama_port }};
        }
	{% endif %}
	{% if inventory_hostname in groups['prometheus_servers'] %}
	location /prometheus {
		proxy_pass http://localhost:{{ prometheus_port }};
	}
	{% endif %}
	{% if inventory_hostname in groups['grafana_servers'] %}
	location /grafana {
		proxy_set_header Host $http_host;
    		proxy_pass http://localhost:{{ grafana_port }};
	}
	{% endif %}
}
